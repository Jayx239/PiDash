<div class="row">
    <div class="col-xs-12"><h2>App Permissions</h2></div>
</div>
<div class="row" ng-repeat="appPermission in activeAppPermissions track by $index">
    <div class="col-xs-12">
        <input type="text" ng-change="resetPermissionUserId(appPermission)" ng-model="appPermission.appUser.userName"/>
    </div>
    <div class="col-xs-12">
        <div class="col-sm-4 col-xs-4">Read</div>
        <div class="col-sm-4 col-xs-4">Write</div>
        <div class="col-sm-4 col-xs-4">Execute</div>
    </div>
    <div class="col-xs-12">
        <div class="col-sm-4 col-xs-4"><input type="checkbox" ng-model="appPermission.read"></div>
        <div class="col-sm-4 col-xs-4"><input type="checkbox" ng-model="appPermission.write"></div>
        <div class="col-sm-4 col-xs-4"><input type="checkbox" ng-model="appPermission.execute"></div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-12"><button class="btn btn-default" ng-click="deleteActiveAppPermission($index)">Delete Permission</button></div>
        </div>
    </div>
    <hr/>
</div>
<div class="row">
    <div class="col-xs-12">
        <button class="btn btn-default" ng-click="addActiveAppPermission()">Add Permission</button>
    </div>
</div>