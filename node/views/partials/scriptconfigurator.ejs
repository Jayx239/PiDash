<div class="script-details-container clearfix">
    <div class="col-xs-12 col-md-6">
        <label for="Status">BasePath</label>
        <h3 name="AppStatus" ng-bind="activeAppScript.basePath">{{activeApp.status}}</h3>
    </div>

    <div class="col-xs-12 col-md-6">
        <label for="AppName">Script Type</label>
        <h3 name="AppName" ng-bind="activeAppScript.type">{{activeApp.type}}</h3>
    </div>

    <div class="col-xs-12 col-md-6">
        <label for="AppUpTime">Executable Name</label>
        <h3 name="AppUpTime">{{activeAppScript.executableName}}</h3>
    </div>

    <div class="col-xs-12 col-md-6">
        <label for="AppName">Arguments</label>
        <h3 name="AppName">{{activeAppScript.arguments}}</h3>
    </div>

    <div class="col-xs-12 col-md-6">
        <button class="btn btn-primary" id="SaveCurrentScriptButton" ng-click="saveActiveScript()">Save Script
        </button>
    </div>
</div>
